	<select id="getList_1" parameterType="Integer"
			resultType="com.bob.stepy.dto.PostDto2">
			<![CDATA[
			SELECT * FROM PLIST_1
			WHERE RONUM >=#{pageNum} * 15 - 14
			AND RONUM <=#{pageNum} * 15
			]]>
	</select>		
	
